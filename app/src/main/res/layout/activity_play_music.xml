<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucence"
    tools:context=".PlayMusicActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/play_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/play_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/icon_back" />
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/play_song_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="歌名"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/play_singer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="歌手"
                android:textSize="12sp"
                android:textColor="@color/gray"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playing_share_music"
                android:layout_gravity="center"
                android:src="@mipmap/icon_share"
                />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_marginTop="90dp"
        android:id="@+id/play_song_cd"
        android:layout_below="@+id/play_title_bar"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/play_cd"
        />

    <RelativeLayout
        android:id="@+id/seek_ll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/play_song_cd"
        >
        <SeekBar
            android:id="@+id/play_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:max="100000"
             />


            <TextView
                android:id="@+id/song_play_cur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="00:00"
                android:layout_alignStart="@id/play_seekbar"
                android:layout_below="@id/play_seekbar"
                />
            <TextView
                android:id="@+id/song_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:30"
                android:textSize="12sp"
                android:layout_alignEnd="@id/play_seekbar"
                android:layout_below="@id/play_seekbar"
                />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_ll"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/playing_forward"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/playing_forward"
            android:layout_gravity="center"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/playing_btn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/playing_play"/>
        <ImageView
            android:id="@+id/playing_next"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/playing_next"
            />
    </LinearLayout>


</RelativeLayout>